            <!-- Welcome Title -->
            <Label styleClass="welcome-title" text="Welcome to SecureDriveUploader">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
               <textAlignment>TextAlignment.CENTER</textAlignment>
