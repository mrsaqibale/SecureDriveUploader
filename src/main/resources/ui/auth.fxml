<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextAlignment?>

<VBox alignment="CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.securedrive.ui.AuthController">
   <style>
      -fx-background-color: linear-gradient(to bottom right, #4285f4 0%, #34a853 100%);
      -fx-padding: 50;
   </style>
   
   <!-- Title -->
   <Label text="Connect to Google Drive">
      <font>
         <Font name="System Bold" size="28.0" />
      </font>
      <textAlignment>CENTER</textAlignment>
      <style>
         -fx-text-fill: white;
         -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 2, 0, 0, 1);
      </style>
   </Label>
   
   <!-- Description -->
   <Label text="Sign in with your Google account to securely upload files to Google Drive">
      <font>
         <Font size="14.0" />
      </font>
      <textAlignment>CENTER</textAlignment>
      <style>
         -fx-text-fill: rgba(255, 255, 255, 0.9);
      </style>
   </Label>
   
   <!-- Sign In Button -->
   <Button fx:id="signInButton" maxWidth="300.0" minWidth="300.0" mnemonicParsing="false" onAction="#handleSignInButton" text="Sign in with Google">
      <font>
         <Font name="System Bold" size="16.0" />
      </font>
      <style>
         -fx-background-color: #ffffff;
         -fx-text-fill: #4285f4;
         -fx-font-weight: bold;
         -fx-background-radius: 8;
         -fx-border-radius: 8;
         -fx-border-color: #dadce0;
         -fx-border-width: 1;
         -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 4, 0, 0, 2);
         -fx-cursor: hand;
         -fx-padding: 12 24 12 24;
      </style>
   </Button>
   
   <!-- Progress Indicator -->
   <ProgressIndicator fx:id="progressIndicator" prefHeight="40.0" prefWidth="40.0" visible="false" />
   
   <!-- Status Label -->
   <Label fx:id="statusLabel" text="" textAlignment="CENTER">
      <font>
         <Font size="12.0" />
      </font>
      <style>
         -fx-text-fill: white;
         -fx-background-color: rgba(255, 255, 255, 0.2);
         -fx-background-radius: 5;
         -fx-padding: 5 10 5 10;
      </style>
   </Label>
   
   <!-- Log Area -->
   <VBox alignment="CENTER" prefHeight="150.0" prefWidth="600.0" spacing="10.0">
      <children>
         <Label text="Authentication Log">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
            <style>
               -fx-text-fill: white;
            </style>
         </Label>
         <TextArea fx:id="logArea" editable="false" prefHeight="100.0" prefWidth="600.0" wrapText="true">
            <style>
               -fx-background-color: rgba(255, 255, 255, 0.9);
               -fx-text-fill: #333;
               -fx-background-radius: 5;
               -fx-border-radius: 5;
               -fx-border-color: rgba(255, 255, 255, 0.3);
               -fx-border-width: 1;
            </style>
         </TextArea>
      </children>
   </VBox>
   
   <!-- Navigation Buttons -->
   <HBox alignment="CENTER" spacing="20.0">
      <children>
         <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" text="← Back">
            <font>
               <Font size="14.0" />
            </font>
            <style>
               -fx-background-color: rgba(255, 255, 255, 0.2);
               -fx-text-fill: white;
               -fx-background-radius: 8;
               -fx-border-radius: 8;
               -fx-border-color: rgba(255, 255, 255, 0.3);
               -fx-border-width: 1;
               -fx-cursor: hand;
               -fx-padding: 8 16 8 16;
            </style>
         </Button>
         <Button fx:id="nextButton" disable="true" mnemonicParsing="false" onAction="#handleNextButton" text="Continue →">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
            <style>
               -fx-background-color: #4CAF50;
               -fx-text-fill: white;
               -fx-font-weight: bold;
               -fx-background-radius: 8;
               -fx-border-radius: 8;
               -fx-border-color: #1B5E20;
               -fx-border-width: 1;
               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.6), 4, 0, 0, 2);
               -fx-cursor: hand;
               -fx-padding: 8 16 8 16;
            </style>
         </Button>
      </children>
   </HBox>
</VBox>